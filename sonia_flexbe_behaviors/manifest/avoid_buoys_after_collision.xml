<?xml version="1.0" encoding="UTF-8"?>

<behavior name="avoid_buoys_after_collision">

	<executable package_path="sonia_flexbe_behaviors.avoid_buoys_after_collision_sm" class="avoid_buoys_after_collisionSM" />
	<tagstring>mouvement</tagstring>
	<author>GS</author>
	<date>Tue Jul 19 2022</date>
	<description>
		After colliding and going backward, pass over the buoy to find the path
	</description>


	<!-- Contained Behaviors -->

	<!-- Available Parameters -->
	<params>

		<param type="numeric" name="distance_up_after_collision" default="1" label="distance_up_after_collision" hint="Sets the distance to the surface in absolute frame">
			<min value="0" />
			<max value="3" />
		</param>

		<param type="numeric" name="distance_forward_after_collision" default="3" label="distance_forward_after_collision" hint="Sets the distance_forward_after_collision">
			<min value="0" />
			<max value="5" />
		</param>

		<param type="numeric" name="distance_down_after_collision" default="2" label="distance_down_after_collision" hint="Sets the distance_down_after_collision">
			<min value="0" />
			<max value="4" />
		</param>

	</params>


</behavior>