<?xml version="1.0" encoding="UTF-8"?>

<behavior name="droppers_task">

	<executable package_path="sonia_flexbe_behaviors.droppers_task_sm" class="droppers_taskSM" />
	<tagstring>task</tagstring>
	<author>William Brouillard</author>
	<date>Wed Nov 17 2021</date>
	<description>
		Find the bin with the right filter chain, then drop the markers in the bin.
	</description>


	<!-- Contained Behaviors -->
	<contains name="search_bottom" />
	<contains name="droppers" />

	<!-- Available Parameters -->
	<params>

		<param type="text" name="filterchain" default="deep_bat" label="filterchain" hint="Sets the filterchain" />

		<param type="text" name="header_name" default="bat" label="header_name" hint="Sets the header_name" />

		<param type="numeric" name="camera_no" default="2" label="camera_no" hint="Sets the camera_no">
			<min value="1" />
			<max value="4" />
		</param>

	</params>


</behavior>